    -> open stud_cursor;
    -> get_list:LOOP
    -> fetch stud_cursor into s_name;
    -> if is_done = 1 then
    -> leave get_list;
    -> end if;
    -> set name_list = concat(s_name,";",name_list);
    ->  end loop get_list;
    -> close stud_cursor;
